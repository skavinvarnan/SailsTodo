<!DOCTYPE html>
<html lang="en" ng-app="TodoModule" ng-cloak>
  <head>
    <title>Todo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/angular-material/angular-material.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->
  </head>
  <body ng-controller="TodoController">
    
    <md-content flex layout-padding>
      <div layout="row">
        <div flex="50">
          <md-content flex layout-padding>
            <p>test</p>
          </md-content>
        </div>
        <div flex="50">
          <md-content flex layout-padding>
            <md-toolbar class="md-warn">
              <div class="md-toolbar-tools">
                <h2 class="md-flex">List of Tasks</h2>
              </div>
            </md-toolbar>
            <md-content flex layout-padding>
              <md-list-item class="md-2-line" ng-repeat="todo in todos">
                <md-checkbox ng-model="data.cb1" aria-label="Checkbox 1">
                </md-checkbox>
                <div class="md-list-item-text" layout="column">
                  <h3>{{ todo.name }}</h3>
                  <h4>{{ todo.desc }}</h4>
                </div>
              </md-list-item>
            </md-content>
          </md-content>
        </div>
      </div>
    </md-content>
    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/angular.js"></script>
    <script src="/js/dependencies/angular-animate.js"></script>
    <script src="/js/dependencies/angular-aria.js"></script>
    <script src="/js/dependencies/angular-material.js"></script>
    <script src="/js/dependencies/angular-messages.js"></script>
    <script src="/js/todo/TodoModule.js"></script>
    <script src="/js/todo/TodoController.js"></script>
    <!--SCRIPTS END-->
  </body>
      
</html>